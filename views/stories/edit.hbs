<h3>Edit Story</h3>
<div class="story-row">
  <form action="/stories/{{story._id}}" method="POST">
  <input type="text" hidden method="_method" value="PUT">
    <div class="story-row">
      <div class="input-field">
        <label for="title" class='my-1'>Title</label>
        <input type="text" name="title" id="title" value="{{story.title}}">
      </div>
    </div>

  <div class="story-row">
    <div class="input-field my-1 select">
      <label for="status">Status</label>
      <select name="status" id="status">
        {{#select}}
        <option value="public" selected>Public</option>
        <option value="private">Private</option>
        {{/select}}
      </select>
    </div>
  </div>

  <div class="story-row">
    <div class="input-field">
      <h4 class='my-1'>Tell Us Your Story:</h4>
      <textarea name="body" id="body">{{story.body}}</textarea>
    </div>
  </div>

  <div class="story-row">
    <input type="submit" value="Save" class="btn btn-add my-1">
    <a href="/dashboard" class="btn orange">Cancel</a>
  </div>
  </form>
</div>